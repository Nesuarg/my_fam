---
import '../styles/global.css';
import CoupleCard from '../components/CoupleCard.tsx';
import PersonCardGrid from '../components/PersonCardGrid.tsx';
import { buildHierarchicalFamilyTree, loadAllPeople } from '../lib/cms';
import { getAllPeople } from '../types/hierarchical-family-utils';

// Try to load from CMS first, fallback to example if no data
let foundingCouple;
let allFamilyMembers;

const familyTreeFromCms = buildHierarchicalFamilyTree();
if (familyTreeFromCms) {
  foundingCouple = familyTreeFromCms.foundingCouple;
  allFamilyMembers = getAllPeople(familyTreeFromCms);
} else {
  // Fallback: load all people from CMS without hierarchical structure
  allFamilyMembers = loadAllPeople();
  foundingCouple = null;
}
---

<html lang="da">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
