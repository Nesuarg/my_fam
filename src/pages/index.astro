---
import '../styles/global.css';
import CompactCoupleCard from '../components/CompactCoupleCard.tsx';
import CompactPersonCardGrid from '../components/CompactPersonCardGrid.tsx';
import HierarchicalFamilyView from '../components/HierarchicalFamilyView.tsx';
import { loadFamilyData } from '../types/simple-family-utils';

// Load family data from JSON files
const familyData = await loadFamilyData();
const foundingCouple = familyData.foundingCouple;
const allFamilyMembers = familyData.allPeople;
---

<html lang="da">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Samtr√¶ for Smith Familien</title>
		<meta name="description" content="Udforsk Smith familiens historie og sl√¶gtsforbindelser" />
	</head>

	<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen">
		<header class="bg-white shadow-sm border-b">
			<div class="max-w-7xl mx-auto px-4 py-6">
				<h1 class="text-4xl font-bold text-center text-gray-900">
					üå≥ Samtr√¶ for Smith Familien
				</h1>
				<p class="text-center text-gray-600 mt-2">
					Udforsk vores families historie og forbindelser
				</p>
			</div>
		</header>

		<main class="max-w-7xl mx-auto px-4">
			<section class="py-8">
				<h2 class="text-2xl font-semibold text-center text-gray-800 mb-6">
					Familietr√¶
				</h2>
				
				{/* Complete hierarchical family tree view */}
				<div class="mb-16">
					<HierarchicalFamilyView familyTree={familyData} client:load />
				</div>

				{/* Display the founding couple prominently */}
				<div class="mb-12">
					<h3 class="text-xl font-semibold text-center text-gray-700 mb-4">
						Stiftende Par
					</h3>
					<CompactCoupleCard couple={foundingCouple} level={0} client:load />
				</div>

				{/* Display all family members in a grid for easy navigation */}
				<div class="mb-8">
					<h3 class="text-xl font-semibold text-center text-gray-700 mb-4">
						Alle Familiemedlemmer
					</h3>
					<CompactPersonCardGrid people={allFamilyMembers} client:load />
				</div>
			</section>
		</main>

		<footer class="bg-white border-t mt-16">
			<div class="max-w-7xl mx-auto px-4 py-6 text-center text-gray-600">
				<p>Bevarer Smith familiens historie for fremtidige generationer</p>
			</div>
		</footer>
	</body>
</html>
